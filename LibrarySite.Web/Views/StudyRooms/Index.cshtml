@model List<LibrarySite.Core.Domain.StudyRoom>

<h2>Study Rooms</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Capacity</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var r in Model)
    {
        <tr>
            <td>@r.Name</td>
            <td>@r.Capacity</td>
            <td>
                <a class="btn btn-sm btn-primary"
                   asp-action="Reserve"
                   asp-route-id="@r.StudyRoomId">Reserve</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a class="btn btn-outline-secondary" asp-action="MyReservations">My Reservations</a>
