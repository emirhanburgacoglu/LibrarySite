@model List<LibrarySite.Core.Domain.StudyRoomReservation>

<h2>My Study Room Reservations</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>RoomId</th>
            <th>Start</th>
            <th>End</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var r in Model)
    {
        <tr>
            <td>@r.StudyRoomId</td>
            <td>@r.StartTime</td>
            <td>@r.EndTime</td>
            <td>@r.Status</td>
            <td>
                @if (r.Status != LibrarySite.Core.Domain.ReservationStatus.Cancelled)
                {
                    <form asp-action="Cancel" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@r.ReservationId" />
                        <button class="btn btn-sm btn-danger">Cancel</button>
                    </form>
                }
            </td>
        </tr>
    }
    </tbody>
</table>

<a class="btn btn-secondary" asp-action="Index">Back to Rooms</a>
