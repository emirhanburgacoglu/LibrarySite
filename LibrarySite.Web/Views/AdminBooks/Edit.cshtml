@model LibrarySite.Web.ViewModels.AdminBookEditVm

@{
    ViewData["Title"] = "Edit Book";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h2 class="mb-1">Edit Book</h2>
        <div class="text-muted">Update catalog information.</div>
    </div>

    <a class="btn btn-outline-secondary" asp-action="Index">Back</a>
</div>

<form asp-action="Edit" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="BookId" />

    <div class="mb-3">
        <label class="form-label fw-semibold">Title</label>
        <input asp-for="Title" class="form-control rounded-4" />
        <span asp-validation-for="Title" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">Author</label>
        <input asp-for="Author" class="form-control rounded-4" />
        <span asp-validation-for="Author" class="text-danger small"></span>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" asp-for="IsAvailable" />
        <label class="form-check-label fw-semibold" asp-for="IsAvailable">
            Available
        </label>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary px-4">Save Changes</button>
        <a class="btn btn-light px-4" asp-action="Index">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
