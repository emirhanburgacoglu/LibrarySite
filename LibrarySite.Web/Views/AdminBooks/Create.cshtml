@model LibrarySite.Web.ViewModels.AdminBookCreateVm

@{
    ViewData["Title"] = "Add New Book";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h2 class="mb-1">Add New Book</h2>
        <div class="text-muted">Create a new catalog entry.</div>
    </div>

    <a class="btn btn-outline-secondary" asp-action="Index">Back</a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success rounded-4">@TempData["Success"]</div>
}

<form asp-action="Create" method="post" class="mt-3">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label fw-semibold">Title</label>
        <input asp-for="Title" class="form-control rounded-4" placeholder="Clean Code" />
        <span asp-validation-for="Title" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">Author</label>
        <input asp-for="Author" class="form-control rounded-4" placeholder="Robert C. Martin" />
        <span asp-validation-for="Author" class="text-danger small"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary px-4">Save</button>
        <a class="btn btn-light px-4" asp-action="Index">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
